generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  password  String
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  logs        Log[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model Log {
  id           String   @id @default(uuid())
  messageId    String
  method       String
  path         String
  statusCode   Int
  duration     Float
  requestSize  String?
  responseSize String?
  error        Json?
  timestamp    DateTime
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id])
  bodyData     LogBody?
  createdAt    DateTime @default(now())

  @@index([messageId])
  @@index([projectId])
}

model LogBody {
  id          String @id @default(uuid())
  logId       String @unique
  log         Log    @relation(fields: [logId], references: [id])
  requestBody Json?
  reqHeaders  Json?
  respBody    Json?
  respHeaders Json?
}
